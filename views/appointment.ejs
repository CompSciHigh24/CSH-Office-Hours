  <title>Home Page</title>
  <!-- Link Bootstrap CSS -->
   <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <!-- Copy in a navbar from Bootstrap and modify -->
  <nav class="navbar navbar-expand-lg bg-body-tertiary">
    <div class="container-fluid">
      <a class="navbar-brand" href="home.html"> Office Hours Appointment</a>
      
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <a class="nav-link active" aria-current="page" href="/students">Sign Up!</a>
        <form class="d-flex" role="search">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <!-- <a class="nav-link active" aria-current="page" href="/students">Sign Up! </a> -->
        <!-- <form class="d-flex" role="search">
         
          
          
          <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-success" type="submit">Search</button>
        </form> -->
      </div>
    </div>
  </nav>
  <div class= container>
    
     <div class="row">
   <%for(let i = 0; i < items.length; i++) { %>
          <div class="card col-sm-12 col-md-6 col-lg-4">
            <div class="card-body">
              <h5 class="card-title"><%= items[i].name %> Office Hours</h5>
              <p class="card-text"> Thursday 6th period</p>
              <h6 class="card-subtitle mb-2 text-body-secondary"><%= items[i].subject %></h6>
              <h6 class="card-subtitle mb-2 text-body-secondary"><%= items[i].roomNum %></h6>
              <h6 class="card-subtitle mb-2 text-body-secondary"><%= items[i].email %></h6>
              <h6 class="card-subtitle mb-2 text-body-secondary"><%= items[i].dayofWeek %></h6>
              
              <a href="/teacher/<%= items[i]._id %>" class="btn btn-primary">View List!</a>
            </div>
          </div>
<% } %>
   </div>      
  </body>
  
  

  <!-- Put the card in an EJS for loop and dynamically plug in your values -->
  
  <!-- Link Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

  <script src="script.js" defer></script>
</body>
</html>